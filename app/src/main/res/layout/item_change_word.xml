<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/space_160"
        android:layout_height="@dimen/space_200"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/space_32"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/wordPic"
        android:background="@drawable/shape_word_picture"
        />

    <TextView
        android:id="@+id/tv_wordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_size_30px"
        app:layout_constraintTop_toTopOf="@+id/wordPic"
        app:layout_constraintLeft_toRightOf="@+id/wordPic"
        android:layout_marginLeft="@dimen/space_20"
        android:text="人教"
        />

    <TextView
        android:id="@+id/tv_wordNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_size_26px"
        app:layout_constraintTop_toBottomOf="@+id/tv_wordTitle"
        app:layout_constraintLeft_toLeftOf="@+id/tv_wordTitle"
        android:text="单词书 1314"
        android:layout_marginTop="@dimen/space_8"
        />
    <TextView
        android:id="@+id/tv_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:background="@drawable/shape_red_word"
        app:layout_constraintTop_toTopOf="@+id/tv_wordNum"
        app:layout_constraintLeft_toRightOf="@+id/tv_wordNum"
        android:layout_marginLeft="@dimen/space_40"
        android:textSize="@dimen/font_size_26px"
        android:text="免费"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_wordNum"
        app:layout_constraintLeft_toRightOf="@+id/tv_wordNum"
        android:layout_marginLeft="@dimen/space_40"
        android:textSize="@dimen/font_size_26px"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_wordNum"
        app:layout_constraintLeft_toLeftOf="@+id/tv_wordTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/space_10"
        android:textSize="@dimen/font_size_28px"
        android:layout_marginTop="@dimen/space_16"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_size_28px"
        android:layout_marginRight="@dimen/space_20"
        android:background="@drawable/shape_yellow"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:paddingTop="@dimen/space_6"
        android:paddingBottom="@dimen/space_6"
        app:layout_constraintTop_toTopOf="@+id/tv_wordTitle"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>